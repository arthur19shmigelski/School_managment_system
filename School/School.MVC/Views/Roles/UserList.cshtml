@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1 class="text text-center alert-info"> <i>Список зарегестрированных в системе пользователей</i></h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Логин пользователя</th>
            <th>Роль</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Изменить роль</a>
                </td>
            </tr>
        }
    </tbody>
    <tr>
        <th>
            <div class="text-info">Итого пользователей: @Model.Count()</div>
        </th>
        <th></th>
    </tr>
</table>